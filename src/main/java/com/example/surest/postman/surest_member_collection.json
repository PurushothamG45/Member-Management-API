{
  "info": {
    "_postman_id": "7c2e7fef-2b67-4b2c-8e7c-aaa000111222",
    "name": "Surest Member Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing authentication and Members CRUD with role-based access."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin) — stores ADMIN_TOKEN",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"adminpass\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set('ADMIN_TOKEN', json.token);",
                  "pm.test('ADMIN_TOKEN captured', function () { pm.expect(pm.collectionVariables.get('ADMIN_TOKEN')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login (User) — stores USER_TOKEN",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user\",\n  \"password\": \"userpass\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set('USER_TOKEN', json.token);",
                  "pm.test('USER_TOKEN captured', function () { pm.expect(pm.collectionVariables.get('USER_TOKEN')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Members",
      "item": [
        {
          "name": "List members (USER)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{USER_TOKEN}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/members",
              "host": ["{{baseUrl}}"],
              "path": ["members"]
            }
          },
          "response": []
        },
        {
          "name": "List members — page/sort/filter (USER)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{USER_TOKEN}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/members?page=0&size=10&sort=lastName,desc&firstName=ann&lastName=sm",
              "host": ["{{baseUrl}}"],
              "path": ["members"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"},
                {"key": "sort", "value": "lastName,desc"},
                {"key": "firstName", "value": "ann"},
                {"key": "lastName", "value": "sm"}
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get member by ID (USER)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{USER_TOKEN}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/members/{{memberId}}",
              "host": ["{{baseUrl}}"],
              "path": ["members", "{{memberId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Create member (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{ADMIN_TOKEN}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Smith\",\n  \"dateOfBirth\": \"1990-01-15\",\n  \"email\": \"alice.smith@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/members",
              "host": ["{{baseUrl}}"],
              "path": ["members"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('201 Created', function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set('memberId', json.id);",
                  "pm.test('memberId captured', function () { pm.expect(pm.collectionVariables.get('memberId')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update member (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{ADMIN_TOKEN}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Alice2\",\n  \"lastName\": \"Smith\",\n  \"dateOfBirth\": \"1990-01-15\",\n  \"email\": \"alice2.smith@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/members/{{memberId}}",
              "host": ["{{baseUrl}}"],
              "path": ["members", "{{memberId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete member (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ADMIN_TOKEN}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/members/{{memberId}}",
              "host": ["{{baseUrl}}"],
              "path": ["members", "{{memberId}}"]
            }
          },
          "response": []
        }
      ]
    },
